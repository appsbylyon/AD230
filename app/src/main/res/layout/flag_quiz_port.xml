<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/flag_linearLayout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:background="@color/flag_background_color">

    <TextView android:id="@+id/flag_titleTextView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/flag_quiz_title"
              android:layout_marginBottom="10dp"
              android:textSize="@dimen/flag_title_size"
              android:textColor="@color/flag_text_color"
              android:gravity="center">
    </TextView>

    <TextView android:id="@+id/flag_questionNumberTextView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="10dp"
              android:textColor="@color/flag_text_color"
              android:textSize="@dimen/flag_text_size"
              android:layout_gravity="center"
              android:gravity="center"/>

    <ImageView android:id="@+id/flag_flagImageView"
               android:adjustViewBounds="false"
               android:layout_width="@dimen/flag_flag_width"
               android:layout_height="@dimen/flag_flag_height"/>

    <TextView android:id="@+id/flag_guessCountryTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="10dp"
              android:text="@string/flag_guess_country"
              android:textColor="@color/flag_text_color"
              android:textSize="@dimen/flag_text_size"/>

    <TableLayout android:id="@+id/flag_buttonTableLayout"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:stretchColumns="0,1,2">
        <TableRow android:id="@+id/flag_tableRow0"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"/>
        <TableRow android:id="@+id/flag_tableRow1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"/>
        <TableRow android:id="@+id/flag_tableRow2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"/>
    </TableLayout>

    <TextView android:id="@+id/flag_answerTextView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/flag_answer_size"
              android:layout_gravity="center"
              android:textStyle="bold"
              android:gravity="center"/>
</LinearLayout>
